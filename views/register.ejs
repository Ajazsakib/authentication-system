<%- include('_header.ejs') %>
    <div class="form-section">
        <div class="main-heading">
            <h1>Register Form</h1>
        </div>
        <form action="/user/createUser" method="POST" id="register-form">
            <div class="form-box">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" required />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
                    <span id="error" style="margin-bottom: 20px; display: inline-block; color: #c20302;">
                        <% if(error) {%>
                            <%= error%>
                                <%}%>
                    </span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-submit" value="Register" />
                </div>
                <div class="form-group text-center">
                    <a href="/user/login">Back To Login</a>
                </div>
            </div>
        </form>
    </div>


    <%- include('_footer.ejs') %>